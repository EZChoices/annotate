{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/next" },
    { "src": "api/**/*.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/tasks(?:/.*)?", "dest": "api/tasks.py" },
    { "src": "/api/(prefill_check|env_names)", "dest": "api/tasks.py" },
    { "src": "/api/(.*)", "dest": "api/$1.py" }
  ]
}
